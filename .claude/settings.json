{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Agent",
      "Bash(rg :*)",
      "Bash(fd :*)",
      "Bash(grep :*)",
      "Bash(find :*)",
      "Bash(mv :*)",
      "Bash(mkdir :*)",
      "Bash(head :*)",
      "Bash(tail :*)",
      "Bash(git diff :*)",
      "Bash(git log :*)",
      "Bash(cargo :*)",
      "Bash(mise run :*)",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "LS",
      "NotebookRead",
      "NotebookEdit",
      "Read",
      "Write",
      "TodoRead",
      "TodoWrite",
      "WebFetch",
      "WebSearch"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "if ! mise run --quiet agent:on:stop 1>&2; then exit 2; fi"
          }
        ]
      }
    ]
  }
}
